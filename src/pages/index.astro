---
import Layout from "../layouts/Layout.astro";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import MirrorList from "../components/MirrorList.astro";
import Sidebar from "../components/Sidebar.astro";

import "../styles/app.css";
---

<Layout title="">
  <Header />
  <div
    class="caddy-wrapper flex flex-wrap bg-white text-neutral-900 gap-0 lg:divide-x max-lg:divide-y caddy-main grow">
    <div class="basis-full lg:basis-2/3">
      <MirrorList />
    </div>
    <div class="basis-full lg:basis-1/3">
      <Sidebar />
    </div>
  </div>

  <Footer />
</Layout>
